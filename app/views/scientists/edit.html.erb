<h1>Edit Scientist Form</h1>

<% if flash[:my_errors] %>
<ul>
    <%= flash[:my_errors].each do |error| %>
    <li><%= error %>
    <% end %>
</ul>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>

    <%= f.submit %>
<% end %>